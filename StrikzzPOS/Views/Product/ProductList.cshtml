@model IEnumerable<StrikzzPOS.DTO.ProductListDTO>


@{
    /**/

    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="text-align:center">
    <h1>Products</h1>
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $('#products').DataTable({
            });

        });
    </script>
}
@Html.AntiForgeryToken()
<p>
    @Html.ActionLink("Create New", "AddUpdateProduct", "Product", null, new { @class = "btn btn-primary btn-sm" })

</p>
<table id="products" class="table">
    <thead>
        <tr>
            <th>
                Product Type
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(a => a.productType))
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.productType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sellingUpToPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.pk_ProductId }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.pk_ProductId })
                </td>
            </tr>

        }
    </tbody>
</table>





