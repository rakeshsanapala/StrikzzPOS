@model StrikzzPOS.Models.RegisterViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#Products_dropdown').multiselect();
        });
    </script>
}
<h2>Create / Update</h2>
@using (Html.BeginForm("AddUpdateUser", "Account"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(a => a.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Password, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.Password, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.ConfirmPassword, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Name, ViewBag.Name as SelectList, "--Select Role--", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.ProductNames, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.ProductNames, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-control-static">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>

}

